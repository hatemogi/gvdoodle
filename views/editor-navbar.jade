            popover-popup-delay="300"
            popover-trigger="{{!editor.changed() ? 'mouseenter' : 'none' }}")
            i.fa.fa-check-square-o
            |  Publish
        li(dropdown ng-show="editor.id != 'NEWT1' && !editor.changed()")
          a.dropdown-toggle(href)
            i.fa.fa-share
