            b.caret
          ul.dropdown-menu
            li
              a(href)
                i.fa.fa-twitter
                |  twitter
            li
              a(href)
                i.fa.fa-facebook
                |  facebook
            li.divider
            li
              a(href)
                i.fa.fa-quote-left
                |  embed
